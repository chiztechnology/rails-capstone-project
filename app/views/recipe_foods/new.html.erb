<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1 class="display-5 text-center mb-4">Add ingredients for Recipe</h1>

      <%= form_for [@recipe, @recipe_food] do |f| %>
        <div class="form-group my-4">
          <%= f.label :food_id, "Select a Food" %>
          <%= f.collection_select :food_id, Food.all, :id, :name, prompt: "Select a Food", class: "form-select" %>
        </div>

        <div class="form-group">
          <%= f.label :quantity, "Quantity" %>
          <%= f.number_field :quantity, class: "form-control sm" %>
        </div>

        <%= f.submit "Add Food to recipe", class: "btn btn-success my-4 mx-auto d-block" %>
      <% end %>
    </div>
  </div>
</div>

